<div class="author">
    <h1 class="author__heading">
        Hi, I am Pranav. 
    </h1>
    <p class="author__body">
        Web developer and content creator.
    </p>
</div>

<img src="/img/hero-image.webp" alt="person looking out through window" class="hero-img" width="981" height="528">

<section class="article">
    <h2 class="article__heading">Latest Posts</h2>

    <ul class="article-ul">

        <% data.forEach(post => { %> 

            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %> </span>
                    <span class="article-list__date">post.createdAt</span>
                </a>
            </li>
            
        <% }) %> 
    </ul>
    <a href="#" class="pagination">
        &lt; View Older Posts
    </a>
</section>